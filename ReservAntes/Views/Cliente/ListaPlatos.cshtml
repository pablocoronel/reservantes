@using ReservAntes.ViewModels
@model  List<PlatoViewModel>
@{
    ViewBag.Title = "Platos";
    //ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<h2>Platos disponibles</h2>
<div class="table-responsive">
    @using (Html.BeginForm("PlatosElegidos", "Cliente"))
    {
        <table class="table">
            <thead>
                <tr>
                    <td>Nombre</td>
                    <td>Precio</td>
                    <td>Elegir</td>
                    <td>Cantidad</td>
                </tr>

            <thead />
            <tbody>


                @foreach (var plato in Model)
                {
                <tr>
                    <td>@plato.NombrePlato</td>
                    <td>$@plato.Precio</td>

                    <td>@Html.CheckBox("elegido", true) // @Html.CheckBoxFor(m => plato.elegido)</td>
                    @*<td><a href="#" class="btn btn-xs btn-success">Elegir</a></td>*@
                    <td>
                        @Html.DropDownListFor(u => plato.cantidad, new SelectList(plato.cantidadPlatos), "Cantidad", new { @class = "form-control" })
                    </td>
                </tr>
                }


            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">ElegirPlatos</button>
        <button onclick="location.href='@Url.Action("Index", "Cliente")';return false;" class="btn btn-danger">Cancelar</button>
    }
</div>