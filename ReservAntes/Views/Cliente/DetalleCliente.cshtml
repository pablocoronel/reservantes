@model ReservAntes.Cliente

@{
    ViewBag.Title = "DetalleCliente";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}


@Html.Partial("_PartialViewCliente")

<h2>Mi Perfil</h2>

<div class="jumbotron">
    <div class="row">
        <div class="col-md-4"></div>
        @using (Html.BeginForm("DetalleCliente", "Cliente", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.ValidationSummary(true)
            <div class="form-group col-md-4">

                <div class="form-group">
                    <label>Nombre:</label>
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Apellido:</label>
                    @Html.TextAreaFor(m => m.Apellido, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    <label>Domicilio:</label>
             
                </div>


                <p></p>
                <div><input type="submit" value="Registrarse" class="btn btn-info" /></div>
            </div>
        }
    </div>
</div>