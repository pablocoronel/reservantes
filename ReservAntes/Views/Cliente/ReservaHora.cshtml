@using ReservAntes.ViewModels
@model  HorariosReservaViewModel
@{
    /**/

    ViewBag.Title = "ReservaHora";
    Layout = "~/Views/Shared/_LayoutCliente.cshtml";
}

<p></p>
<p></p>
<br />
<div class="thumbnail">
    <div class="row">
        <div class="col-lg-5"></div>

        <h2 class="text-center">Verifica si hay disponibilidad</h2>
        @using (Html.BeginForm("ReservaHora", "Cliente", FormMethod.Post))
        {
            @Html.HiddenFor(u => u.RestoId)
            <div class="col-lg-2"></div>
            <div class="col-lg-4">

                <div class="form-group">
                    <label>Hora:</label>
                    @Html.DropDownListFor(u => u.hora, new SelectList(Model.Horarios), "Hora", new { @class = "form-control" })
                    @Html.ValidationMessageFor(u => u.hora, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label>Cantidad de Personas:</label>
                @Html.DropDownListFor(u => u.comensales, new SelectList(Model.cantidadMaxima), "Cantidad de Comensales", new { @class = "form-control" })
                @Html.ValidationMessageFor(u => u.comensales, "", new { @class = "text-danger" })
            </div><br />
            <div class="col-lg-5"></div>

            <button type="submit" class="btn btn-primary btn-lg">Reservar</button>
            @Html.ValidationSummary(true, "")

        }
    </div>
</div>