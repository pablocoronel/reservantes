@model ReservAntes.Extensions.UsuarioExtension

@{
    ViewBag.Title = "CreateUser";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-xs-12 col-md-5 col-md-offset-3">
            @if (ViewBag.Guardado != null)
    {
        <div class="alert alert-success">
            @ViewBag.Guardado
        </div>
}
            @if (ViewBag.Error != null)
    {
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
}
        </div>
    </div>

    <div class="row">
        <div class="col-md-3"></div>
        <div class="jumbotron col-md-5">
            <div>
                @using (Html.BeginForm())
    {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            <div class="form-group">
                <label>Nombre de Usuario:</label>
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Username)
            </div>

            <div class="form-group">
                <label>Contraseña:</label>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="form-group">
                <label>Repita Contraseña:</label>
                @Html.PasswordFor(m => m.RePass, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.RePass)
            </div>

            <div class="form-group">
                <label>Email:</label>
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="form-group">
                <label>Tipo de Usuario:</label>
                @Html.DropDownList("TipoUsuarioId", new SelectList(ViewBag.ListUsuario, "Id", "Descripcion"), new { @class = "form-control" })

            </div>


            <p></p>
            <button type="submit" id="" class="btn btn-block btn btn-primary" style="width:283px;">Registrarse</button>


}
            </div>
        </div>
    </div>

</div>