@model List<Restaurante>
@{
    ViewBag.Title = "Ver restaurantes";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Restaurante</th>
                <th>Estado</th>
                <th>Habilitar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var resto in Model)
            {
                String estado = "";
                if (resto.Habilitado) {
                    estado = "Habilitado";
                } else {
                    estado = "NO habilitado";
                }

                <tr>
                    <td>@resto.NombreComercial</td>
                    <td>@estado</td>
                    <td><a href="@Url.Action("HabilitarRestaurante","Admin", new { idResto = resto.IdRestaurante })" class="btn btn-success">Habilitar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>