@model ReservAntes.Models.LogicaEmail
@{
    ViewBag.Title = "Contacto";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<br />
<br />
<div class="jumbotron">
    <h2>@ViewBag.Title.</h2>



    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <hr />
        <div class="form-group">
            <div class="col-md-2 control-label">Nombre:</div>
                @Html.TextBoxFor(m => m.NombreConsu, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.NombreConsu)
            </div>
        <br />
        <div class="form-group">
            <div class="col-md-2 control-label">Email:</div>

                @Html.TextBoxFor(m => m.EmailConsu, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.EmailConsu)
            </div>
        <br />
        <div class="form-group">
            <div class="col-md-2 control-label">Mensaje:</div>
                @Html.TextAreaFor(m => m.MensajeConsu, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MensajeConsu)
            </div>
        <br />
        <div class="form-group">
            <div class="">
                <input type="submit" class="btn btn-primary" value="Enviar" />
                <div class="btn btn-danger">@Html.ActionLink("Cancelar", "Index", "Home")</div>

            </div>
        </div>
    }



</div>