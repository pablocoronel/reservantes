
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";

}

<div class="row">

    @if (Session["usuarioTipo"] != null)
    {

        <p>tipo de usuario: </p>
        @Session["usuarioTipo"].ToString();
        <br>
        <p>ID de usuario: </p>
        @Session["usuarioId"].ToString();
        <br>
        <p>nombre de usuario: </p>
        @Session["usuarioNombre"].ToString();

    }
</div>


<style>
    #map-canvas {
        width: 100%;
        height: 400px;
        background-color: grey;
       }
</style>

<div class="jumbotron">

    <form class="form-inline" action="#" method="post">
        <input type="text" class="form-control" placeholder="Buscar Direccion" />
        <button class="btn btn-primary" type="button">Buscar</button>
    </form>
    <br />

    <div class="row">
        <div id="map-canvas"></div>
    </div>

</div>

@section scripts{
    <script src='http://maps.google.com/maps/api/js?key=AIzaSyCj0UbeSz2p0umVfycFjdqHJSKAS_cdLog' type="text/javascript"></script>
    <script>
        function inicialar() {

            var mapCanvas = document.getElementById('map-canvas');
            var mapOptions = {
                center: new google.maps.LatLng(-34.6290089, -58.4071996),
                zoom: 12,
                mapTypeId: google.maps.MapTypeId.G_NORMAL_MAP
            }

            var map = new google.maps.Map(document.getElementById("map-canvas"), mapOptions);
        }
        google.maps.event.addDomListener(window, 'load', inicialar);


    </script>
    }
