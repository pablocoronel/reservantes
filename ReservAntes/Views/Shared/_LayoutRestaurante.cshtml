@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["usuarioTipo"] == null || Session["usuarioTipo"].ToString() != "3")
{
    Response.Redirect("/Home/Index/");
}
<!-- menu principal -->
<nav class="navbar navbar-default" id="menuPrincipal">
    <div class="container">
        <div class="navbar-header col-xs-12 col-sm-offset-1 col-sm-3">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mibarrita">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a onclick="location.href='@Url.Action("Index", "Restaurante")';return false;">
                <img src="~/Imagenes/Logo.jpg" alt="Reservantes" class="img-responsive" />
            </a>
        </div>
        <div class="collapse navbar-collapse col-xs-12 col-sm-8 pull-right" id="mibarrita">
            <li>@Html.ActionLink("Home", "Index", "Restaurante")</li>
            <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>

            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a>@Session["usuarioNombre"]</a></li>
                <li>@Html.ActionLink("Salir", "Logout", "Login")</li>
            </ul>
        </div>
    </div>
</nav>
<!-- menu de Restaurante -->
<div class="navbar navbar-default navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <div class="navbar-brand">
                <span class="glyphicon glyphicon-th"></span>
                <button onclick="location.href='@Url.Action("Index","Restaurante")'; return false;" class="btn btn-default">Inicio</button>
                @*<button onclick="location.href='@Url.Action("DetalleRestaurante","Restaurante")'; return false;" class="btn btn-default">Mi Restaurante</button>*@
                <button onclick="location.href='@Url.Action("RestoPerfil","Restaurante")'; return false;" class="btn btn-default">Editar mi Restaurante</button>
                <button onclick="location.href='@Url.Action("Reservas","Restaurante")'; return false;" class="btn btn-default">Reservas</button>
                @*<button onclick="location.href='@Url.Action("Reporte","Restaurante")'; return false;" class="btn btn-default">Reporte</button>*@
                <button onclick="location.href='@Url.Action("CreateMenu","Restaurante")'; return false;" class="btn btn-default">Crear Nuevo Menu</button>
                <button onclick="location.href='@Url.Action("MiMenu","Restaurante")'; return false;" class="btn btn-default">Ver mi Menu</button>
            </div>
        </div>
    </div>
</div>
@RenderBody()
@RenderSection("scripts", false)
