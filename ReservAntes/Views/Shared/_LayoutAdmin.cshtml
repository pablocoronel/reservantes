
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Session["usuarioId"] == null)
{
    Response.Redirect("../Home/Index/");
}

<!-- menu principal -->
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <a class="navbar-brand" href="">ReservAntes</a>
        </div>
        <ul class="nav navbar-nav">
            <li>@Html.ActionLink("Home", "Index", "Admin")</li>
            <li>@Html.ActionLink("About", "About", "Admin")</li>
            <li>@Html.ActionLink("Contact", "Contact", "Admin")</li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
            <li>@Html.ActionLink("Salir", "Logout", "Login")</li>
        </ul>
    </div>
</nav>

<!-- menu de admin -->
<div class="navbar navbar-default navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <div class="navbar-brand">
                <span class="glyphicon glyphicon-th"></span>
                <button onclick="location.href='@Url.Action("Index","Cliente")'; return false;" class="btn btn-default">Inicio</button>
                <button onclick="location.href='@Url.Action("DetalleCliente","Cliente")'; return false;" class="btn btn-default">Mi Perfil</button>
                <button onclick="location.href='@Url.Action("ReservCliente","Cliente")'; return false;" class="btn btn-default">Mis Reservas</button>
                <button onclick="location.href='@Url.Action("EditCliente","Cliente")'; return false;" class="btn btn-default">Editar Perfil</button>
            </div>
        </div>
    </div>
</div>


@RenderBody()
