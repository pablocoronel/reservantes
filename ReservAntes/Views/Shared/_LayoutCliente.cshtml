
@{
    ViewBag.Title = "Cliente";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["usuarioTipo"] == null || Session["usuarioTipo"].ToString() != "2")
{
    Response.Redirect("/Home/Index/");
}
<!-- menu principal -->
<nav class="navbar navbar-default" id="menuPrincipal">
    <div class="container">
        <div class="navbar-header col-xs-5 col-sm-offset-1 col-sm-2">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mibarrita"></button>
            <a onclick="location.href='@Url.Action("Index", "Home")';return false;">
                <img src="~/Imagenes/Logo.png" alt="Reservantes" class="img-responsive" />
            </a>

        </div>
        <div class="slogan col-xs-5"><label><em>"No esperes la comida, la comida te espera a vos"</em></label></div>

        <div class="collapse navbar-collapse col-xs-12 col-sm-8 pull-right" id="mibarrita">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Cliente")</li>
                <li>@Html.ActionLink("Contacto", "Contact", "Home")</li>

            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a>@Session["usuarioNombre"]</a></li>
                <li>@Html.ActionLink("Salir", "Logout", "Login")</li>
            </ul>
        </div>
    </div>
</nav>
<!-- menu de cliente -->
<div class="navbar navbar-default navbar-static-top">
    <div class="container">
        <div class="navbar-header">
            <div class="navbar-brand">
                <span class="glyphicon glyphicon-th"></span>
                <button onclick="location.href='@Url.Action("Index","Cliente")'; return false;" class="btn btn-warning">Inicio</button>
                <button onclick="location.href='@Url.Action("DetalleCliente","Cliente")'; return false;" class="btn btn-warning">Mi Perfil</button>
                <button onclick="location.href='@Url.Action("ReservCliente","Cliente")'; return false;" class="btn btn-warning">Mis Reservas</button>
                <button onclick="location.href='@Url.Action("EditCliente","Cliente")'; return false;" class="btn btn-warning">Editar Perfil</button>
            </div>
        </div>
    </div>
    <br />
</div>

<div class="container alturaMinimaDeSecciones">
    @RenderBody()
</div>