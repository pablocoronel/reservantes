@model IEnumerable<Reserva>
@{
        Layout = "~/Views/Shared/_LayoutRestaurante.cshtml";
    }

    <p>Listado de Reservas</p>
<div class="table-responsive">

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                @*<th>Cantidad</th>*@
                @*<th>Fecha</th>*@
                <th>Ver Platos</th>
                <th>Estado</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr class="active">
                    <td>
                        @Html.DisplayFor(modelItem => item.ClienteId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cliente.Apellido)
                    </td>
                    <!--Actualizar DB-->
                    @*<td>
                            @Html.DisplayFor(modelItem => Reserva.CantidadComensales)
                        </td>*@
                    @*<td>
                            @Html.DisplayFor(modelItem => Reserva.Fecha)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.EstadoReserva.Descripcion)
                    </td>
                    <td>
                        <a href="/Restaurante/EditarReserva/@item.Id" class="button fit">Aceptar</a>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>